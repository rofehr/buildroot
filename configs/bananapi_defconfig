BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FILE="board/bananapi/linux-bananapi.config"

# Bootloaders
BR2_TARGET_UBOOT=y
